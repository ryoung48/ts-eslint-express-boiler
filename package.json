{
  "name": "ts-eslint-express-boiler",
  "version": "0.1.0",
  "main": "build/index.js",
  "scripts": {
    "start": "better-npm-run start",
    "clean": "rimraf build",
    "lint": "eslint . --ext .ts,.tsx",
    "dev": "better-npm-run dev",
    "build": "better-npm-run build",
    "debug": "npm run lint && node --inspect=0.0.0.0:5858 .",
    "test": "jest --coverage",
    "check:all": "npm run lint && npm test",
    "hooks:install": "node ./node_modules/husky/bin/install",
    "precommit": "npm run check:all"
  },
  "betterScripts": {
    "start": {
      "command": "node .",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "npm run clean && tsc-watch --onSuccess \"npm run debug\"",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "myapp:*"
      }
    },
    "build": {
      "command": "npm run clean && npm run check:all && tsc",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "@types/jest": "^26.0.22",
    "better-npm-run": "^0.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "helmet": "^4.5.0",
    "morgan": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/connect-history-api-fallback": "^1.3.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.0",
    "@types/express-winston": "^4.0.0",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.7.36",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3.3"
  }
}
